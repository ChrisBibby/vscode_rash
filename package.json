{
  "name": "rash",
  "displayName": "rash",
  "description": "Calculate cryptographic hash values for files and text",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "version": "0.0.35",
  "publisher": "chrisbibby",
  "author": {
    "name": "Chris Bibby"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChrisBibby/vscode_rash.git"
  },
  "homepage": "https://github.com/ChrisBibby/vscode_rash",
  "bugs": "https://github.com/ChrisBibby/vscode_rash/issues",
  "license": "SEE LICENSE IN LICENSE.md",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rash.md5",
    "onCommand:rash.sha256",
    "onCommand:rash.md5-text",
    "onCommand:rash.sha256-text"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rash.md5",
        "title": "Copy MD5 to Clipboard for selected file",
        "enablement": "explorerResourceIsFolder == false"
      },
      {
        "command": "rash.sha256",
        "title": "Copy Sha256 to Clipboard for selected file",
        "enablement": "explorerResourceIsFolder == false"
      },
      {
        "command": "rash.md5-text",
        "title": "Copy MD5 to Clipboard for selected text"
      },
      {
        "command": "rash.sha256-text",
        "title": "Copy Sha256 to Clipboard for selected text"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "rash.md5",
          "when": "false"
        },
        {
          "command": "rash.sha256",
          "when": "false"
        },
        {
          "command": "rash.md5-text",
          "when": "editorHasSelection"
        },
        {
          "command": "rash.sha256-text",
          "when": "editorHasSelection"
        }
      ],
      "explorer/context": [
        {
          "command": "rash.md5",
          "group": "6_copypath@999",
          "when": "explorerResourceIsFolder == false"
        },
        {
          "command": "rash.sha256",
          "group": "6_copypath@999",
          "when": "explorerResourceIsFolder == false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vsce": "^1.79.5",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "hasha": "^5.2.0"
  }
}
